<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Cadastro.CadastroUsuarioActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">


        <EditText
            android:id="@+id/cadastro_usuario"
            android:layout_width="299dp"
            android:layout_height="match_parent"
            android:layout_weight="0.8"
            android:backgroundTint="#040405"
            android:layout_marginTop="20dp"
            android:hint="UsuÃ¡rio"
            android:inputType="textPersonName" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/cadastro_senha"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.8"
            android:layout_marginTop="20dp"
            android:backgroundTint="#000000"
            android:hint="Senha"
            android:inputType="textPassword" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/cadastro_confirma_senha"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="#000000"
            android:hint="Confirmar Senha"
            android:layout_marginTop="20dp"
            android:layout_weight="0.8"
            android:inputType="textPassword" />

    </LinearLayout>

    <Button
        android:id="@+id/button2"
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="70dp"
        android:background="@color/colorPrimary"
        android:elevation="6dp"
        android:gravity="center"
        android:onClick="cadastre"
        android:text="Cadastrar"
        android:textColor="#fff"
        android:textSize="17dp" />

</LinearLayout>
